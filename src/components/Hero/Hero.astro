---
import { Image } from "astro:assets";
import avatar from "../../assets/images/avatar.png";
---

<!-- HERO SECTION -->
<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Fondo con gradiente animado -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-purple-900/20 to-cyan-900/20 animate-gradient"></div>

  <!-- Grid de fondo -->
  <div
    class="absolute inset-0"
    style="background-image: linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px); background-size: 50px 50px;"
  >
  </div>

  <div class="container mx-auto px-6 text-center z-10">
    <div class="fade-in">
      <div class="mb-8 relative inline-block">
        <div class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-blue-500 mx-auto" style="animation: float 3s ease-in-out infinite;">
          <Image src={avatar} width={320} 
            alt="Avatar" class="w-full h-full object-cover" loading="eager" />
          </Image>
          <div class="absolute inset-0 rounded-full bg-blue-500 blur-xl opacity-50 -z-10"></div>
        </div>

        <h1 class="text-5xl md:text-7xl font-bold mb-6 fade-in-delay-1">
          Hola, soy <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600 neon-text">Jeremmy Varela</span>
        </h1>

        <p class="text-xl md:text-2xl text-gray-400 mb-8 fade-in-delay-2">
          <span class="text-cyan-400">Full Stack Developer</span> • Creando experiencias digitales únicas
        </p>

        <div class="flex flex-wrap gap-4 justify-center fade-in-delay-3">
          <a
            href="#projects"
            class="btn-3d px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full font-semibold text-lg hover:from-blue-600 hover:to-purple-700 transition-all inline-block text-center"
          >
            Ver Proyectos
          </a>
        </div>
      </div>

      <!-- Indicador de scroll animado -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Script para crear y animar las estrellas -->
  <script>
    const starsContainer = document.getElementById("stars-container");
    if (starsContainer) {
      for (let i = 0; i < 60; i++) {
        const star = document.createElement("div");
        star.className = "absolute bg-white rounded-full opacity-80";
        const size = Math.random() * 2.5 + 1.2;
        star.style.width = `${size}px`;
        star.style.height = `${size}px`;
        star.style.top = `${Math.random() * 100}%`;
        star.style.left = `${Math.random() * 100}%`;
        // Movimiento vertical lento y parpadeo
        const duration = Math.random() * 8 + 6;
        const delay = Math.random() * 5;
        star.style.animation = `twinkle ${Math.random() * 3 + 2}s infinite ease-in-out, star-move ${duration}s linear ${delay}s infinite`;
        starsContainer.appendChild(star);
      }
    }
  </script>

  <style>
    @keyframes twinkle {
      0%,
      100% {
        opacity: 0.2;
        transform: scale(1);
      }
      50% {
        opacity: 1;
        transform: scale(1.3);
      }
    }
    @keyframes star-move {
      0% {
        transform: translateY(0);
      }
      100% {
        transform: translateY(40px);
      }
    }
    .animate-gradient {
      animation: gradient-move 8s ease-in-out infinite alternate;
    }
    @keyframes gradient-move {
      0% {
        filter: brightness(1) blur(0px);
      }
      100% {
        filter: brightness(1.2) blur(2px);
      }
    }
    .animate-fadein {
      opacity: 0;
      animation: fadein 3s ease-out forwards;
    }
    .animate-fadein.delay-200 {
      animation-delay: 0.2s;
    }
    .animate-fadein.delay-300 {
      animation-delay: 0.3s;
    }
    @keyframes fadein {
      to {
        opacity: 1;
      }
    }
    .animate-avatar-glow {
      box-shadow:
        0 0 32px 8px #3b82f6cc,
        0 0 0 4px #000a;
      transition: box-shadow 0.3s;
    }
    .animate-avatar-glow:hover {
      box-shadow:
        0 0 48px 16px #6366f1cc,
        0 0 0 6px #000a;
    }
    .animate-avatar-halo {
      animation: avatar-halo 2.5s ease-in-out infinite alternate;
    }
    @keyframes avatar-halo {
      0% {
        opacity: 0.5;
        filter: blur(16px);
      }
      100% {
        opacity: 0.9;
        filter: blur(24px);
      }
    }
    .animate-text-glow {
      text-shadow:
        0 0 8px #3b82f6cc,
        0 0 16px #6366f1cc;
      animation: text-glow 2.5s ease-in-out infinite alternate;
    }
    @keyframes text-glow {
      0% {
        text-shadow:
          0 0 8px #3b82f6cc,
          0 0 16px #6366f1cc;
      }
      100% {
        text-shadow:
          0 0 16px #3b82f6cc,
          0 0 32px #6366f1cc;
      }
    }
  </style>
</section>
